@model PatientsPortalModel.ViewModels.UserViewModels.ChangePasswordViewModel
@{
    ViewBag.Title = "Użytkownicy";
}

<div class="row page-box">
    <div class="col-sm-12">
        <h2>Zmiana hasła</h2>
        @using (Html.BeginForm("ChangePassword"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "Podane hasło jest nieprawidłowe", new { @class = "alert alert-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.OldPassword)
                @Html.EditorFor(m => m.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword)
                @Html.EditorFor(m => m.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.EditorFor(m => m.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Zapisz</button>
            </div>
        }
    </div>
</div>