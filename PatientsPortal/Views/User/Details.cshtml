@using PatientsPortal.Methods
@model PatientsPortalModel.ViewModels.UserViewModels.UserDetailsViewModel
@{
    ViewBag.Title = "Użytkownicy";
}
<div class="row page-box">
    <div class="col-sm-8">
        <div>
            <h3>Imię i Nazwisko:</h3>
            @Model.FirstName @Model.LastName
        </div>
        <div>
            <h3>Login:</h3>
            @Model.UserName
        </div>
        <div>
            <h3>Data urodzenia:</h3>
            @Model.BirthDate
        </div>
        <div>
            <h3>Płeć:</h3>
            @Model.Gender
        </div>
        <div>
            <h3>Pesel:</h3>
            @Model.Pesel
        </div>
        <div>
            <h3>Numer telefonu:</h3>
            @Model.MobileNumber
        </div>
        <div>
            <h3>Email:</h3>
            @Model.Email
        </div>
        <div>
            <h3>Rola:</h3>
            @Model.RoleName
        </div>
    </div>
    <div class="col-sm-4">
        <div>
            <div>
                <label>Data zaakceptowania warunków użytkowania:</label>
                <span>@Model.TermsApprovedDate</span>
            </div>
            @*<div>
                    <label>Rola:</label>
                    <span>@Model.Roles</span>
                </div>*@
            <div>
                <label>Data stworzenia:</label>
                <span>@Model.CreatedDate</span>
            </div>
            <div>
                <label>Stworzone przez:</label>
                <span>@Html.ActionLink(Model.CreatedBy,
                          "Details", "User", new {id = Methods.GetUserIdByUserName(@Model.CreatedBy) }, null)</span>
            </div>

            @if (Model.ModifiedDate != null)
            {
                <div>
                    <label>Data zmodyfikowania:</label>
                    <span>@Model.ModifiedDate</span>
                </div>
            }

            @if (Model.ModifiedBy != null)
            {
                <div>
                    <label>Zmodyfikowane przez:</label>
                    <span>@Html.ActionLink(Model.ModifiedBy,
                              "Details", "User", new {id = Methods.GetUserIdByUserName(@Model.ModifiedBy)}, null)</span>
                </div>
            }

        </div>
    </div>
</div>