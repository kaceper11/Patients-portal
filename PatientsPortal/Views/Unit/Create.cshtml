@model PatientsPortalModel.ViewModels.UnitViewModels.CreateUnitViewModel
@{
    ViewBag.Title = "Jednostki";
}

<div class="row page-box">
    <div class="col-sm-12">
        <h2>Nowa jednostka</h2>
        @using (Html.BeginForm("Create"))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Value)
                @Html.EditorFor(m => m.Value, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(m => m.Value, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Dodaj</button>
            </div>

        }
    </div>
</div>