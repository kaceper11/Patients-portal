@model PatientsPortalModel.ViewModels.ProblemViewModels.EditProblemViewModel
@{
    ViewBag.Title = "Problemy";
}
<div class="row page-box">
    <div class="col-sm-12">
        <h2>Edycja</h2>
        @using (Html.BeginForm("Edit"))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(m => m.Subject)
                @Html.EditorFor(m => m.Subject, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(m => m.Subject, "", new {@class = "text-danger"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ProblemDate)
                <div class="input-group">
                    @Html.EditorFor(m => m.ProblemDate, new {htmlAttributes = new {@class = "form-control", type = "date"}})
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                @Html.ValidationMessageFor(m => m.ProblemDate, "", new {@class = "text-danger"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new {@class = "form-control", placeholder = "Opis..."})
                @Html.ValidationMessageFor(m => m.Description, "", new {@class = "text-danger"})
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Zapisz</button>
            </div>

        }
    </div>
</div>